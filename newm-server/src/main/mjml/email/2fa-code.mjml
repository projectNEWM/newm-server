        <mj-image width="24px" padding="40px 0" src="https://res.cloudinary.com/newm/image/upload/f_auto,q_auto/v1/newmserver-emails/az85bfjowfbjlxkzdtdp" href="https://twitter.com/projectNEWM" />
      </mj-column>
      <mj-column width="104px">
        <mj-image width="24px" padding="40px 0" src="https://res.cloudinary.com/newm/image/upload/f_auto,q_auto/v1/newmserver-emails/xhgyabijvyaljvovjzlu" href="https://newm.io" />
